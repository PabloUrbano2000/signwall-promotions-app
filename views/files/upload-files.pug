extends ../layout/main 

block contenido
    div.py-10
        include ../layout/includes/signwall-logo
        h2.text-center.text-2xl.font-extrabold=pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST", action="/files", enctype="multipart/form-data")
                .space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informaci√≥n General 
                    p.text-gray-600 Para agregar una imagen debe completar los siguientes datos
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Nombre imagen
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre imagen", type="text", name="nombre", maxLength=50, value=datos.nombre ? datos.nombre : '')

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="marca") Marca
                            select#marca.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="marca")
                                option(value="") - Seleccione -
                                each marca in marcas
                                    option(value=marca.id selected=datos.marca ? datos.marca == marca.id ? true: false : null)= marca.nombre
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="archivo") Seleccione la imagen
                            input#archivo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="archivo", type="file", accept="image/png, image/jpeg, image/jpg")

                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Subir imagen")