div(class="w-full fixed top-0 md:relative" style="z-index:10;")
    header(class="bg-slate-900 p-4", style= headerColor? 'background-color:'+ headerColor + ";" : '')
        div.container.mx-auto.flex.justify-between.items-center.flex
            h1.text-2xl.text-white.font-extrabold.text-center.py-1 Signwall
                span.font-normal Promociones
            nav(class="my-5 text-sm md:flex md:items-center font-bold md:gap-3 text-white hidden")
                a(href="/") Home
                span |
                a(href="/gallery/elcomercio/") El Comercio
                span |
                a(href="/gallery/gestion/") Gestión
                span |
                a(href="/gallery/depor/") Depor
                span |
                a(href="/gallery/trome/") Trome
