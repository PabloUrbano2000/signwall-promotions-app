        ul(id="toogle-list" class="hidden w-full uppercase text-center text-white bg-slate-900" style= headerColor? 'background-color:'+ headerColor + ";" : '')
            li(class="nav-item p-3 cursor-pointer border-t")
                a(href="/" class="w-full block") Home
            li(class="p-3 cursor-pointer border-t border-stone-200 border-solid")
                a(href="/gallery/elcomercio/" class="w-full block") El Comercio
            li(class="p-3 cursor-pointer border-t border-stone-200 border-solid")
                a(href="/gallery/gestion/" class="w-full block") Gestión
            li(class="p-3 cursor-pointer border-t border-stone-200 border-solid")
                a(href="/gallery/depor/" class="w-full block") Depor
            li(class="p-3 cursor-pointer border-t border-stone-200 border-solid")
                a(href="/gallery/trome/" class="w-full block") Trome
            li(href="/files/", class="p-3 cursor-pointer border-t border-stone-200 border-solid")
                a(href="/files/") Subir imagen
